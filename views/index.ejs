<%- include("templates/header") %>
<div class="container text-center">
  <br>
  <br>
  <img src="/images/logo.png" alt="Logo" width="200px">
<% if (!session.GLOBAL_AUTHENTICATED) { %>
    <br>
    <br>
    <button type="button" class="mt-3 w-50 btn btn-lg btn-warning" onclick="location.href='/signup';">Sign up</button>
    <br>
    <button type="button" class="mt-3 w-50 btn btn-lg btn-warning mb-5" onclick="location.href='/login';">Log in</button>
  <% } else { %>
    <br>
    <br>
    <h2>Hello, <%= session.loggedName %>!</h2>
    <br>
    <button type="button" class="mt-3 w-75 btn btn-lg btn-warning" onclick="location.href='/chat';">Start Chat</button>
    <br>
    <button type="button" class="mt-3 w-75 btn btn-lg btn-warning" onclick="location.href='/pantry';">Edit My Pantry</button>
    <br>
    <button type="button" class="mt-3 w-75 btn btn-lg btn-warning" onclick="location.href='/logout';">Logout</button>
  <% } %>
</div>
<%- include("templates/footer") %>




