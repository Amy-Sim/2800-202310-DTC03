<%- include("templates/header") %>
    <div class="container text-center">
        <% if (!session.GLOBAL_AUTHENTICATED) { %>
            <br>
            <br>
            <button type="button" class="mt-3 w-50 btn btn-lg btn-warning" onclick="location.href='/signup';">Sign
                up</button>
            <br>
            <button type="button" class="mt-3 w-50 btn btn-lg btn-warning mb-5" onclick="location.href='/login';">Log
                in</button>
            <% } else { %>
                <br>
                <h2>Account preference</h2>
                <br>
                <form id="preferenceForm" action="/preference" method="POST">
                    <input type="hidden" name="userId" value="<%= user._id %>">

                    <div class="row justify-content-center">
                        <div class="col-md-8 mb-3 mb-sm-0">
                            <div class="card text-bg-light mb-3">
                                <div class="card-body">
                                    <div class="form-group">
                                        <h4>Preferred Cuisine</h4>
                                        <div class="container text-centre">
                                            <div class="row cuisine-pref-container">
                                                <% cuisineOptions.forEach(function(option, index) { %>
                                                    <div class="col-4 col-md-4">
                                                        <div class="text-start">
                                                            <label class="form-check-label">
                                                                <input class="form-check-input" type="checkbox"
                                                                    name="cuisinePreference" value="<%= option %>" <% if
                                                                    (user && user.cuisinePreference &&
                                                                    user.cuisinePreference.includes(option)) { %>checked
                                                                <% } %>
                                                                    disabled>
                                                                    <%= option %>
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-8 mb-3 mb-sm-0">
                            <div class="card text-bg-light mb-3">
                                <div class="card-body">
                                    <div class="form-group">
                                        <h4>Dietary Restriction</h4>
                                        <div class="container text-centre">
                                            <div class="row dietary-res-container">
                                                <% dietaryOptions.forEach(function(option, index) { %>
                                                    <div class="col-6 col-md-6">
                                                        <div class="text-start">
                                                            <label class="form-check-label">
                                                                <input class="form-check-input" type="checkbox"
                                                                    name="dietaryRestrictions" value="<%= option %>" <%
                                                                    if (user && user.dietaryRestrictions &&
                                                                    user.dietaryRestrictions.includes(option)) {
                                                                    %>checked <% } %>
                                                                    disabled>
                                                                    <% if (option==='Nuts' ) { %>
                                                                        Nut Free
                                                                        <% } else if (option==='Yeast Breads' ) { %>
                                                                            Yeast Free
                                                                            <% } else { %>
                                                                                <%= option %>
                                                                                    <% } %>

                                                            </label>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-8 mb-3 mb-sm-0">
                            <div class="card text-bg-light mb-3">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="featurePreference">
                                            <h4>Cooking Assistant</h4>
                                        </label>
                                        <select class="form-select" name="persona" data-placeholder="Click to choose">
                                        <% persona.forEach(function(option) { %>
                                            <option value="<%= option %>" <% if (user && user.persona === option) 
                                                { %>selected<% } %>>
                                            <%= option %>
                                            </option>
                                        <% }); %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button id="edit" class="w-25 btn btn-lg btn-warning mt-1" type="button">Edit</button>
                    <button id="save" class="w-25 btn btn-lg btn-warning mt-1" type="submit" disabled>Save</button>
                </form>
                <% } %>
    </div>

    <script>
        document.getElementById('edit').addEventListener('click', function () {
            // remove the disabled attribute and enable Save button
            document.getElementById('save').removeAttribute('disabled');

            // Disable the Edit button
            this.setAttribute('disabled', 'disabled');

            // Enable all checkboxes and dropdown elements to allow editing
            var checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(function (checkbox) {
                checkbox.removeAttribute('disabled');
            });
            document.querySelector('select[name="persona"]').removeAttribute('disabled');
        });
    </script>
    

    <%- include("templates/footer") %>