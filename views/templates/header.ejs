<!DOCTYPE html>
<html lang="en">

<head>
  <title>PantryMaster</title>
  <link rel="icon" type="../images/logo.png" href="../images/logo.png">
  <meta name="PantryMaster" content="My PantryMaster App">

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap Library CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet" />

  <!-- Boostrap Library JS CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

  <!-- JQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link type="text/css" rel="stylesheet" href="https://www.gstatic.com/firebasejs/ui/4.8.1/firebase-ui-auth.css" />

  <!-- Google Icons (Material Design)-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&family=Montserrat:wght@400;700&family=Oswald:wght@400;700&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://use.typekit.net/xyx4mkb.css">

  <!-- font awesome Library -->
  <script src="https://kit.fontawesome.com/5e2108dab1.js" crossorigin="anonymous"></script>

  <!-- css from style folder -->
  <link rel="stylesheet" href="/style/navbar.css">
  <link rel="stylesheet" href="/style/index.css">

  <nav class="navbar navbar-expand-lg bg-body-tertiary background">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">PantryMaster</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
        aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/"><img src="images/svg/icon_home.svg"
                style="margin-right: 10px; width:15px; height:auto"></img>Home</a>
          </li>
          <% if (session.GLOBAL_AUTHENTICATED) { %>
            <li class="nav-item">
              <a class="nav-link" href="/chat"><img src="images/svg/icon_chat.svg"
                  style="margin-right: 10px; width:20px; height:auto"></img>Chat</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/recipe"><img src="images/svg/icon_recipe.svg"
                  style="margin-right: 10px; width:16px; height:auto"></img>Recipe</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/pantry"><img src="images/svg/icon_fridge.svg"
                  style="margin-right: 10px; width:12.8px; height:auto"></img>My Pantry</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/preference"><img src="images/svg/icon_favorite.svg"
                  style="margin-right: 10px; width:20px; height:auto">Preference</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile"><img src="images/svg/icon_account.svg"
                  style="margin-right: 10px; width:20px; height:auto">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/aboutus"><img src="images/svg/icon_info.svg"
                  style="margin-right: 10px; width:20px; height:auto">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout"><img src="images/svg/icon_logout.svg"
                  style="margin-right: 10px; width:20px; height:auto">Log Out</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/login"><img src="images/svg/icon_login.svg"
                  style="margin-right: 10px; width:20px; height:auto">Login</a>
            </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup"><img src="images/svg/icon_signup.svg"
                  style="margin-right: 10px; width:20px; height:auto">Sign Up</a>
            </li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>
</head>

<body style="background-color:hsl(38, 100%, 96%);">